{
	"compilerOptions": {
		"rootDirs": [
			"src"
		],
		"lib": [
			"es2020"
		],
		"types": [
			"node"
		],
		"module": "Node16",
		"target": "ES2020",
		"moduleResolution": "node16",
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"allowJs": true,
		"typeRoots": [
			"node_modules/@types"
		],
		"outDir": "./dist",
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"resolveJsonModule": true
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"webpack.config.mjs"
	]
}